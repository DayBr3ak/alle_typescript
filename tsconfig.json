{
  "compilerOptions": {
      // Always include these settings
      "composite": true,
      "declaration": true,
      "declarationMap": true,
      "sourceMap": true,

      // These settings are totally up to you
      "esModuleInterop": true,
      "module": "commonjs",
      "strict": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "target": "es2017",
      "lib": [
        "es2017", "esnext.asynciterable"
      ]
  }
}